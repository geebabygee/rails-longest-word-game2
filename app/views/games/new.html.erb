<div class="container margin">
  <h1>New game</h1>
  <ul class="letters">
    <% @letters.each do |letter| %>
      <li><%= letter %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="POST" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <!--         <input  name="letters" type="hidden" value='<%= @letters %>'>
 -->    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word">
    <input type="submit" value="Play!" class="btn btn-default">
  </form>
  <%= link_to "Refresh", new_path %>
</div>
<!-- need the hidden field tag to send the letters in the params -->